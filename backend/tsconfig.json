{
  "compilerOptions": {
    "target": "es2022",
    "allowJs": true,

    "strict": true,

    /* If NOT transpiling with TypeScript: */
    "moduleResolution": "bundler",
    "module": "ESNext",
    "noEmit": true,

    // If code doesn't run in  DOM
    "lib": ["es2022"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
